---
import type { Post } from '@hotmetal/content-core';
import PostCard from './PostCard.astro';

interface Props {
  posts: Post[];
  heading?: string;
  showViewAll?: boolean;
}

const { posts, heading = 'Recent Posts', showViewAll = true } = Astro.props;
---

<section class="px-6 py-16">
  <div class="mx-auto max-w-[var(--max-width-wide)]">
    <div class="flex justify-between items-baseline mb-10">
      <h2 class="text-2xl font-bold">{heading}</h2>
      {showViewAll && (
        <a href="/posts" class="text-sm text-accent hover:underline transition-colors">
          View All &rarr;
        </a>
      )}
    </div>

    {posts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    ) : (
      <div class="text-center py-16 text-text-muted">
        <p class="text-lg">No posts yet. Stay tuned!</p>
      </div>
    )}
  </div>
</section>
