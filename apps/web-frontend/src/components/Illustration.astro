---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<svg
  class:list={['illustration', className]}
  viewBox="0 0 400 120"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-hidden="true"
>
  <!-- Abstract thin-line composition -->
  <path
    d="M0 60 Q50 20 100 60 T200 60 T300 60 T400 60"
    stroke="currentColor"
    stroke-width="1"
    opacity="0.15"
  />
  <path
    d="M20 80 Q80 30 140 70 Q200 110 260 50 Q320 -10 380 40"
    stroke="currentColor"
    stroke-width="0.75"
    opacity="0.1"
  />
  <circle cx="80" cy="55" r="3" stroke="currentColor" stroke-width="0.75" fill="none" opacity="0.2" />
  <circle cx="200" cy="60" r="5" stroke="currentColor" stroke-width="0.75" fill="none" opacity="0.15" />
  <circle cx="320" cy="45" r="2.5" stroke="currentColor" stroke-width="0.75" fill="none" opacity="0.2" />
  <line x1="150" y1="30" x2="160" y2="90" stroke="currentColor" stroke-width="0.5" opacity="0.1" />
  <line x1="250" y1="25" x2="240" y2="95" stroke="currentColor" stroke-width="0.5" opacity="0.1" />
</svg>
