{
  "name": "hotmetal",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "cms:migrate:local": "pnpm --filter @hotmetal/cms-admin db:migrate:local",
    "cms:migrate:remote": "pnpm --filter @hotmetal/cms-admin db:migrate:remote",
    "cms:seed": "pnpm --filter @hotmetal/cms-admin seed",
    "cms:reset:local": "rm -rf apps/cms-admin/.wrangler/state && pnpm cms:migrate:local && pnpm cms:seed",
    "dal:migrate:local": "pnpm --filter @hotmetal/data-layer db:migrate:local",
    "dal:migrate:remote": "pnpm --filter @hotmetal/data-layer db:migrate:remote",
    "dal:reset:local": "rm -rf .wrangler/shared-state && pnpm dal:migrate:local",
    "db:migrate:local": "pnpm cms:migrate:local && pnpm dal:migrate:local",
    "db:migrate:remote": "pnpm cms:migrate:remote && pnpm dal:migrate:remote",
    "db:reset:local": "pnpm cms:reset:local && pnpm dal:reset:local",
    "deploy:cms": "pnpm --filter @hotmetal/cms-admin run deploy",
    "deploy:dal": "pnpm --filter @hotmetal/data-layer run deploy",
    "deploy:writer": "pnpm --filter @hotmetal/writer-agent run deploy",
    "deploy:scout": "pnpm --filter @hotmetal/content-scout run deploy",
    "deploy:publisher": "pnpm --filter @hotmetal/publisher run deploy",
    "deploy:web": "pnpm --filter @hotmetal/writer-web run deploy",
    "deploy:all": "pnpm deploy:cms && pnpm deploy:dal && pnpm deploy:writer && pnpm deploy:scout && pnpm deploy:publisher && pnpm deploy:web",
    "dev:cms": "pnpm --filter @hotmetal/cms-admin dev",
    "dev:dal": "pnpm --filter @hotmetal/data-layer dev",
    "dev:web": "pnpm --filter @hotmetal/web-frontend dev",
    "dev:writer": "pnpm --filter @hotmetal/writer-agent dev",
    "dev:publisher": "pnpm --filter @hotmetal/publisher dev",
    "dev:writer-web": "pnpm --filter @hotmetal/writer-web dev",
    "dev:scout": "pnpm --filter @hotmetal/content-scout dev"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  }
}
