{
	"name": "@hotmetal/writer-agent",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev --persist-to ../../.wrangler/shared-state",
		"start": "wrangler dev",
		"test": "vitest",
		"cf-typegen": "wrangler types",
		"build": "wrangler deploy --dry-run --outdir=dist",
		"typecheck": "tsc --noEmit",
		"db:migrate:local": "wrangler d1 migrations apply WRITER_DB --local --persist-to ../../.wrangler/shared-state"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.39",
		"@hotmetal/content-core": "workspace:*",
		"@hotmetal/shared": "workspace:*",
		"agents": "^0.3.10",
		"ai": "^6.0.77",
		"hono": "^4.10.7",
		"marked": "^17.0.1",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.12.4",
		"@cloudflare/workers-types": "^4.20251202.0",
		"@types/node": "^25.2.1",
		"typescript": "^5.5.2",
		"vitest": "~3.2.0",
		"wrangler": "^4.63.0"
	}
}
